<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_currentplayer"

        android:textSize="@dimen/textsize_currentplayer"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/top_margin_text_currentplayer"
        />

    <Button
        android:id="@+id/next_button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/text_next_random"

        android:width="@dimen/button_width"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/bottom_margin_next_button"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/left_margin"
        />

    <TextView
        android:id="@+id/text_ticker"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="@dimen/textsize_ticker"
        tools:text = "1"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>